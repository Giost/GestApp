<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context="mcteamgestapp.momo.com.mcteamgestapp.Moduli.Gestionale.Nominativo.StampaNominativoActivity">

    <ScrollView
        android:id="@+id/scrollView17"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:animateLayoutChanges="true"
            android:orientation="vertical"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView187"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:gravity="center"
                    android:singleLine="true"
                    android:text="Dati nominativo:"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textColor="@color/petrolio_scuro"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                android:paddingLeft="10dp">

                <TextView
                    android:id="@+id/textView189"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:text="Titolo:" />

                <TextView
                    android:id="@+id/stampa_nominativo_titolo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@color/asphalt_color"
                    android:textStyle="bold|italic" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                android:paddingLeft="10dp">

                <TextView
                    android:id="@+id/textView193"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:text="Cognome:" />

                <TextView
                    android:id="@+id/stampa_nominativo_cognome"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@color/asphalt_color" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                android:paddingLeft="10dp">

                <TextView
                    android:id="@+id/textView197"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:text="Nome:" />

                <TextView
                    android:id="@+id/stampa_nominativo_nome"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@color/asphalt_color" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                android:paddingLeft="10dp">

                <TextView
                    android:id="@+id/textView201"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:text="Società:" />

                <TextView
                    android:id="@+id/stampa_nominativo_societa"
                    android:layout_width="130dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:singleLine="false"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@color/asphalt_color"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/stampa_nominativo_societa_visualizza_button"
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="25dp"
                    android:layout_marginBottom="5dp"
                    android:background="@drawable/nominativo_societa_view_bg"
                    android:singleLine="false"
                    android:text="Vedi"
                    android:textColor="@color/carot"
                    android:textSize="10dp"
                    android:visibility="invisible" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                android:paddingLeft="10dp">

                <TextView
                    android:id="@+id/textView205"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:text="Indirizzo:" />

                <TextView
                    android:id="@+id/stampa_nominativo_indirizzo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@color/asphalt_color" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                android:paddingLeft="10dp">

                <TextView
                    android:id="@+id/textView209"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:text="CAP:" />

                <TextView
                    android:id="@+id/stampa_nominativo_cap"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@color/asphalt_color" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                android:paddingLeft="10dp">

                <TextView
                    android:id="@+id/textView213"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:text="Provincia:" />

                <TextView
                    android:id="@+id/stampa_nominativo_provincia"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@color/asphalt_color" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                android:paddingLeft="10dp">

                <TextView
                    android:id="@+id/textView217"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:text="Città:" />

                <TextView
                    android:id="@+id/stampa_nominativo_citta"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@color/asphalt_color" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                android:paddingLeft="10dp">

                <TextView
                    android:id="@+id/textView221"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:text="Nazionalità/paese:" />

                <TextView
                    android:id="@+id/stampa_nominativo_nazionalita"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@color/asphalt_color" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="10dp">

                <TextView
                    android:id="@+id/textView225"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:text="Telefono:" />

                <TextView
                    android:id="@+id/stampa_nominativo_telefono"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:autoLink="phone"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@color/asphalt_color" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                android:paddingLeft="10dp">

                <TextView
                    android:id="@+id/textView229"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:text="Fax:" />

                <TextView
                    android:id="@+id/stampa_nominativo_fax"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@color/asphalt_color" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                android:paddingLeft="10dp">

                <TextView
                    android:id="@+id/textView233"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:text="Cellulare:" />

                <TextView
                    android:id="@+id/stampa_nominativo_cellulare"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:autoLink="phone"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@color/asphalt_color" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                android:paddingLeft="10dp">

                <TextView
                    android:id="@+id/textView237"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:text="Email:" />

                <TextView
                    android:id="@+id/stampa_nominativo_email"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:autoLink="email"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@color/asphalt_color" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                android:paddingLeft="10dp">

                <TextView
                    android:id="@+id/textView239"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:text="Note:" />

                <TextView
                    android:id="@+id/stampa_nominativo_note"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@color/asphalt_color" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:orientation="horizontal"
                android:paddingLeft="10dp">

                <Button
                    android:id="@+id/stampa_nominativo_mostra_dettagli_button"
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="120dp"
                    android:layout_height="35dp"
                    android:background="@drawable/green_back"
                    android:text="Mostra dettagli"
                    android:textColor="@color/green_dark"
                    android:textSize="10dp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/stampa_nominativo_dettagli_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/more_detail_background"
                android:orientation="vertical"
                android:visibility="gone">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal"
                    android:paddingLeft="10dp">

                    <TextView
                        android:id="@+id/textView241"
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:text="Luogo di nascita:" />

                    <TextView
                        android:id="@+id/stampa_nominativo_luogo_nascita"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textColor="@color/asphalt_color" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal"
                    android:paddingLeft="10dp">

                    <TextView
                        android:id="@+id/textView243"
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:text="Data di nascita:" />

                    <TextView
                        android:id="@+id/stampa_nominativo_data_nascita"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textColor="@color/asphalt_color" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal"
                    android:paddingLeft="10dp">

                    <TextView
                        android:id="@+id/textView245"
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:text="Partita IVA" />

                    <TextView
                        android:id="@+id/stampa_nominativo_partita_iva"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textColor="@color/asphalt_color" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal"
                    android:paddingLeft="10dp">

                    <TextView
                        android:id="@+id/textView247"
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:text="Codice fiscale:" />

                    <TextView
                        android:id="@+id/stampa_nominativo_codice_fiscale"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textColor="@color/asphalt_color" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal"
                    android:paddingLeft="10dp">

                    <TextView
                        android:id="@+id/textView249"
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:text="Carta d&apos;identità:" />

                    <TextView
                        android:id="@+id/stampa_nominativo_carta_identita"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textColor="@color/asphalt_color" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal"
                    android:paddingLeft="10dp">

                    <TextView
                        android:id="@+id/textView251"
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:text="Patente:" />

                    <TextView
                        android:id="@+id/stampa_nominativo_patente"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textColor="@color/asphalt_color" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal"
                    android:paddingLeft="10dp">

                    <TextView
                        android:id="@+id/textView253"
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:text="Tessera sanitaria:" />

                    <TextView
                        android:id="@+id/stampa_nominativo_tessera_sanitaria"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textColor="@color/asphalt_color" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal"
                    android:paddingLeft="10dp">

                    <TextView
                        android:id="@+id/textView255"
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:text="Sito web:" />

                    <TextView
                        android:id="@+id/stampa_nominativo_sito_web"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:autoLink="web"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textColor="@color/asphalt_color" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal"
                    android:paddingLeft="10dp">

                    <TextView
                        android:id="@+id/textView257"
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:text="Nome banca" />

                    <TextView
                        android:id="@+id/stampa_nominativo_nome_banca"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textColor="@color/asphalt_color" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingLeft="10dp">

                    <TextView
                        android:id="@+id/textView259"
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:text="Indirizzo banca:" />

                    <TextView
                        android:id="@+id/stampa_nominativo_indirizzo_banca"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textColor="@color/asphalt_color" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal"
                    android:paddingLeft="10dp">

                    <TextView
                        android:id="@+id/textView261"
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:text="IBAN:" />

                    <TextView
                        android:id="@+id/stampa_nominativo_iban"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textColor="@color/asphalt_color" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal"
                    android:paddingLeft="10dp">

                    <TextView
                        android:id="@+id/textView263"
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:text="Note dettaglio:" />

                    <TextView
                        android:id="@+id/stampa_nominativo_note_dettaglio"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textColor="@color/asphalt_color" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="20dp"
                android:layout_marginTop="40dp"
                android:gravity="center"
                android:orientation="horizontal">

                <Button
                    android:layout_width="90dp"
                    android:layout_height="35dp"
                    android:layout_alignBottom="@+id/stampa_nominativo_annulla"
                    android:background="@drawable/register_background"
                    android:text="Annulla"
                    android:textColor="@color/bottom_red"
                    android:textSize="12dp" />

                <Button
                    android:id="@+id/stampa_nominativo_stampa"
                    android:layout_width="90dp"
                    android:layout_height="35dp"
                    android:layout_below="@+id/main_register_view"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/access_blue"
                    android:text="stampa"
                    android:textColor="@color/blue"
                    android:textSize="12dp" />

                <Button
                    android:id="@+id/stampa_nominativo_stampa_dettagli"
                    android:layout_width="90dp"
                    android:layout_height="35dp"
                    android:layout_below="@+id/main_register_view"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/green_back"
                    android:text="Stampa Dett."
                    android:textColor="@color/green_dark"
                    android:textSize="12dp" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>
