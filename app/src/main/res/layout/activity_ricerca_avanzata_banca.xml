<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:background="@color/white"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="mcteamgestapp.momo.com.mcteamgestapp.Moduli.Amministrazione.RubricaBanche.RicercaAvanzataBanca"
    android:orientation="vertical">


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:paddingLeft="20dp"
        android:paddingRight="20dp">

        <EditText
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/ricerca_avanzata_banca_nome"
            android:hint="Nominativo" />

        <EditText
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/ricerca_avanzata_banca_indirizzo"
            android:hint="Indirizzo" />

        <EditText
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/ricerca_avanzata_banca_IBAN"
            android:hint="IBAN" />

        <ImageButton
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:id="@+id/ricerca_avanzata_banca_button"
            android:background="@drawable/access_blue"
            android:src="@drawable/ic_search_blue"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:id="@+id/ricerca_avanzata_banca_status"
            android:layout_marginBottom="10dp" />
    </LinearLayout>

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ricerca_avanzata_banca_result_list" />
</LinearLayout>
