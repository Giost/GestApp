<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:layout_height="match_parent"
    tools:context="mcteamgestapp.momo.com.mcteamgestapp.Moduli.Gestionale.Allegati.NuovoAllegatoActivity">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/scrollView24" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@color/white"
            android:padding="30dp">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp" >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Allegato "
                    android:id="@+id/textView295"
                    android:layout_gravity="center_vertical"
                    android:textSize="22dp"
                    android:textColor="@color/petrolio_scuro"
                    android:gravity="center"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="10dp" >

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/nuovo_allegato_descrizione"
                    android:layout_weight="1"
                    android:hint="Descrizione*" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="10dp"
                android:weightSum="1">

                <com.beardedhen.androidbootstrap.BootstrapButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fitsSystemWindows="true"
                    android:text="Scegli file*.."
                    app:bootstrapSize="lg"
                    android:id="@+id/nuovo_allegato_scegli_file"
                    app:bootstrapBrand="warning"
                    android:layout_marginRight="20dp"
                    app:buttonMode="regular"
                    app:showOutline="false"
                    app:roundedCorners="true"
                    android:focusable="false" />


            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_gravity="center_horizontal"
                android:gravity="center">

                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:id="@+id/nuovo_allegato_logo" />

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:id="@+id/nuovo_allegato_nome_file"
                        android:layout_weight="0.53" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:id="@+id/nuovo_allegato_dimensione" />

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginTop="100dp"
                android:layout_marginBottom="20dp" >

                <com.beardedhen.androidbootstrap.BootstrapButton
                    android:layout_width="100dp"
                    android:layout_height="40dp"
                    android:fitsSystemWindows="true"
                    android:text="annulla"
                    app:bootstrapSize="lg"
                    android:id="@+id/nuovo_allegato_annulla"
                    app:bootstrapBrand="danger"
                    android:layout_marginRight="80dp"
                    app:buttonMode="regular"
                    app:showOutline="true"
                    app:roundedCorners="true"
                    android:focusable="false" />

                <com.beardedhen.androidbootstrap.BootstrapButton
                    android:layout_width="100dp"
                    android:layout_height="40dp"
                    android:fitsSystemWindows="true"
                    app:bootstrapText="{fa-cloud-upload}"
                    app:bootstrapSize="lg"
                    android:id="@+id/nuovo_allegato_crea_nuovo"
                    app:bootstrapBrand="primary"
                    app:buttonMode="regular"
                    app:showOutline="true"
                    app:roundedCorners="true"
                    android:focusable="false" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</RelativeLayout>
