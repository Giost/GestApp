<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.mcteam.gestapp.Moduli.Gestionale.Allegati.EliminaAllegatoActivity">


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp" >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Allegato"
            android:id="@+id/textView293"
            android:layout_gravity="center_vertical"
            android:textSize="22dp"
            android:textColor="@color/petrolio_scuro"
            android:gravity="center"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="5dp" >

        <ImageView
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:id="@+id/elimina_allegato_logo"
            android:layout_gravity="center" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="10dp" >

        <TextView
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:text="Descrizione:"
            android:id="@+id/textView294"
            android:layout_gravity="center_vertical"
            android:textSize="16dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:id="@+id/elimina_allegato_descrizione"
            android:layout_gravity="center_vertical"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp" >

        <TextView
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:text="Allegato:"
            android:id="@+id/textView296"
            android:layout_gravity="center_vertical"
            android:textSize="16dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:autoLink="map"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:id="@+id/elimina_allegato_nome"
            android:layout_gravity="center_vertical" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_marginTop="150dp"
        android:layout_marginBottom="10dp" >

        <com.beardedhen.androidbootstrap.BootstrapButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Annulla"
            android:backgroundTint="@color/upped_red"
            app:bootstrapSize="lg"
            android:id="@+id/elimina_allegato_annulla"
            app:bootstrapBrand="danger"
            android:layout_marginRight="80dp"
            app:buttonMode="regular"
            app:showOutline="true"
            app:roundedCorners="true"
            />

        <com.beardedhen.androidbootstrap.BootstrapButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/elimina_allegato_bootstrap"
            android:text="Elimina"
            android:backgroundTint="@color/blue"
            app:bootstrapSize="lg"
            app:bootstrapBrand="primary"
            app:buttonMode="regular"
            app:showOutline="true"
            app:roundedCorners="true"
            />

    </LinearLayout>

</LinearLayout>
