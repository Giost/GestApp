<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"

    xmlns:app="http://schemas.android.com/apk/res-auto"

    tools:context="mcteamgestapp.momo.com.mcteamgestapp.Moduli.Gestionale.Associazioni.VisualizzaAssociazioneActivity"
    android:orientation="vertical">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/scrollView26" >

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin"
            android:layout_height="match_parent">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="Associazione"
                    android:textColor="@color/petrolio_scuro"
                    android:id="@+id/textView120" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="10dp"
                android:paddingBottom="10dp" >

                <TextView
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="Commessa:"
                    android:id="@+id/textView118" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:id="@+id/visualizza_associazione_nome_commessa" />

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="10dp"
                android:paddingBottom="10dp">

                <TextView
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="Capo Progetto:"
                    android:id="@+id/textView116" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:id="@+id/visualizza_associazione_capo_progetto" />

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="10dp"
                android:paddingBottom="10dp" >

                <TextView
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="Consulente:"
                    android:id="@+id/textView122" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:id="@+id/visualizza_associazione_consulente" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="10dp"
                android:paddingBottom="10dp" >

                <TextView
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="Inizio:"
                    android:id="@+id/textView128" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:id="@+id/visualizza_associazione_data_inizio" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="10dp"
                android:paddingBottom="10dp" >

                <TextView
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="Fine:"
                    android:id="@+id/textView133" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:id="@+id/visualizza_associazione_data_fine" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:layout_marginTop="100dp"
                android:layout_marginBottom="10dp">

                <com.beardedhen.androidbootstrap.BootstrapButton
                    android:layout_width="70dp"
                    android:layout_height="50dp"
                    app:bootstrapText="{fa-print}"
                    app:bootstrapSize="lg"
                    android:id="@+id/visualizza_associazione_stampa"
                    app:bootstrapBrand="primary"
                    app:buttonMode="regular"
                    app:showOutline="true"
                    app:roundedCorners="true"
                    android:layout_marginRight="30dp" />

                <com.beardedhen.androidbootstrap.BootstrapButton
                    android:layout_width="70dp"
                    android:layout_height="50dp"
                    android:id="@+id/visualizza_associazione_modifica"
                    app:bootstrapText="{fa-pencil}"
                    app:bootstrapSize="lg"
                    app:bootstrapBrand="warning"
                    app:buttonMode="regular"
                    app:showOutline="true"
                    app:roundedCorners="true"
                    android:layout_marginRight="30dp" />

                <com.beardedhen.androidbootstrap.BootstrapButton
                    android:layout_width="70dp"
                    android:layout_height="50dp"
                    android:id="@+id/visualizza_associazione_elimina"
                    app:bootstrapText="{fa-trash}"
                    app:bootstrapSize="lg"
                    app:bootstrapBrand="danger"
                    app:buttonMode="regular"
                    app:showOutline="true"
                    app:roundedCorners="true"
                    />

            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>
