<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:focusable="false"

    >

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/header_text_letter"
        android:background="@color/gestionale_home_background"
        android:gravity="center_horizontal"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:paddingTop="5dp"
        android:paddingBottom="5dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="85dp"
        android:orientation="horizontal"
        android:focusableInTouchMode="false"
        android:descendantFocusability="blocksDescendants"
        android:paddingLeft="10dp">


        <TextView
            android:layout_width="90dp"
            android:layout_height="fill_parent"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="SocietÃ "
            android:id="@+id/rubrica_societa_nome"
            android:gravity="center_vertical"
            android:textStyle="bold|italic" />

        <TextView
            android:layout_width="100dp"
            android:layout_height="fill_parent"
            android:text="Indirizzo"
            android:id="@+id/rubrica_societa_indirizzo"
            android:gravity="center_vertical"
            android:textStyle="italic"
            android:textSize="12dp"
            android:layout_marginLeft="5dp" />

        <TextView
            android:layout_width="100dp"
            android:layout_height="fill_parent"
            android:text="Telefono"
            android:id="@+id/rubrica_societa_phone"
            android:gravity="center_vertical"
            android:layout_marginLeft="5dp"

            />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/rubrica_societa_overflow"
            android:src="@drawable/ic_more_vert_black_24dp"
            android:layout_gravity="center_vertical|right"
            android:background="@color/transparent"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:layout_marginRight="10dp"

            />
    </LinearLayout>


</LinearLayout>