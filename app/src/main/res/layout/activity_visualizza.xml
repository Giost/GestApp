<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/white"
    tools:context="com.mcteam.gestapp.Moduli.Sistemi.VisualizzaActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/scrollView4"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="match_parent"
            android:id="@+id/linearLayout3"
            android:visibility="visible"
            android:layout_centerVertical="true"
            android:paddingLeft="10dp"
            android:paddingRight="10dp">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_marginTop="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Dati utente:"
                    android:id="@+id/textView51"
                    android:textColor="@color/petrolio_scuro"
                    android:gravity="center"
                    android:singleLine="true"
                    android:textStyle="bold|italic" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="40dp"
                android:gravity="center_vertical"
                android:weightSum="1"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="11dp">

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="Nome:"
                    android:id="@+id/textView21"
                    android:textSize="17dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName"
                    android:ems="10"
                    android:id="@+id/visualizza_nome"
                    android:layout_marginLeft="5dp"
                    android:textSize="18dp"
                    android:textColor="@color/asphalt_color" />

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:gravity="center_vertical"
                android:weightSum="1"
                android:layout_marginLeft="11dp" >

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView22"
                    android:text="Cognome:"
                    android:textSize="17dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName"
                    android:ems="10"
                    android:id="@+id/visualizza_cognome"
                    android:layout_marginLeft="5dp"
                    android:textSize="18dp"
                    android:textColor="@color/asphalt_color" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:gravity="center_vertical"
                android:layout_marginLeft="11dp">

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="Email:"
                    android:id="@+id/textView23"
                    android:textSize="17dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="textEmailAddress"
                    android:ems="10"
                    android:autoLink="email"
                    android:id="@+id/visualizza_email"
                    android:layout_marginLeft="5dp"
                    android:textSize="18dp"
                    android:textColor="@color/asphalt_color" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:gravity="center_vertical"
                android:weightSum="1"
                android:layout_marginLeft="10dp">

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="Telefono:"
                    android:id="@+id/textView24"
                    android:textSize="17dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:autoLink="phone"
                    android:id="@+id/visualizza_phone"
                    android:layout_marginLeft="5dp"
                    android:textSize="18dp"
                    android:textColor="@color/asphalt_color" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:gravity="center_vertical"
                android:weightSum="1"
                android:layout_marginLeft="10dp" >

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="Data Nascita:"
                    android:id="@+id/textView41"
                    android:textSize="14dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:id="@+id/visualizza_data_nascita"
                    android:layout_marginLeft="5dp"
                    android:textSize="18dp"
                    android:textColor="@color/asphalt_color" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:gravity="center_vertical"
                android:weightSum="1"
                android:layout_marginLeft="10dp" >

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="Luogo Nascita:"
                    android:id="@+id/textView47"
                    android:textSize="14dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:id="@+id/visualizza_luogo_nascita"
                    android:layout_marginLeft="5dp"
                    android:textSize="18dp"
                    android:textColor="@color/asphalt_color" />
            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center|center_vertical|center_horizontal"
                android:weightSum="1"
                android:layout_marginTop="10dp"
                android:descendantFocusability="blocksDescendants"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Tipo Accesso:"
                    android:id="@+id/textView20"
                    android:textColor="@color/petrolio_scuro"
                    android:gravity="center"
                    android:singleLine="true"
                    android:layout_marginBottom="10dp"
                    android:textStyle="bold|italic" />

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:gravity="center">

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="175dp"
                        android:layout_height="wrap_content">

                        <CheckBox
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Amministrazione"
                            android:id="@+id/visualizza_check_amministrazione"
                            android:checked="false"
                            android:enabled="false"
                            android:clickable="false" />

                        <CheckBox
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Commerciale"
                            android:id="@+id/visualizza_check_commerciale"
                            android:checked="false"
                            android:enabled="false" />

                        <CheckBox
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/visualizza_check_gestionale"
                            android:checked="false"
                            android:text="Gestionale"
                            android:enabled="false" />

                        <CheckBox
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Sistemi"
                            android:id="@+id/visualizza_check_sistemi"
                            android:checked="false"
                            android:enabled="false" />

                    </LinearLayout>

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <CheckBox
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Capo progetto"
                            android:id="@+id/visualizza_check_capo_progett"
                            android:checked="false"
                            android:enabled="false" />

                        <CheckBox
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Consulente"
                            android:id="@+id/visualizza_check_consulente"
                            android:checked="false"
                            android:enabled="false" />

                        <CheckBox
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Produzione"
                            android:id="@+id/visualizza_check_produzione"
                            android:checked="false"
                            android:clickable="false"
                            android:enabled="false" />

                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_marginTop="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Abilitato:"
                    android:id="@+id/textView27"
                    android:gravity="center"
                    android:singleLine="true"
                    android:layout_marginBottom="10dp"
                    android:textColor="@color/petrolio_scuro"
                    android:textStyle="bold|italic" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ABILITATO"
                    android:id="@+id/visualizza_abilitato"
                    android:textSize="16dp" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_marginTop="40dp"
                android:layout_marginBottom="20dp">

                <com.beardedhen.androidbootstrap.BootstrapButton
                    android:layout_width="70dp"
                    android:layout_height="50dp"
                    app:bootstrapText="{fa-print}"
                    app:bootstrapSize="lg"
                    android:id="@+id/visualizza_button_stampa"
                    app:bootstrapBrand="primary"
                    app:buttonMode="regular"
                    app:showOutline="true"
                    app:roundedCorners="true"
                    android:layout_marginRight="30dp" />

                <com.beardedhen.androidbootstrap.BootstrapButton
                    android:layout_width="70dp"
                    android:layout_height="50dp"
                    android:id="@+id/visualizza_button_modifica"
                    app:bootstrapText="{fa-pencil}"
                    app:bootstrapSize="lg"
                    app:bootstrapBrand="warning"
                    app:buttonMode="regular"
                    app:showOutline="true"
                    app:roundedCorners="true"
                    android:layout_marginRight="30dp" />

                <com.beardedhen.androidbootstrap.BootstrapButton
                    android:layout_width="70dp"
                    android:layout_height="50dp"
                    android:id="@+id/visualizza_button_elimina"
                    app:bootstrapText="{fa-trash}"
                    app:bootstrapSize="lg"
                    app:bootstrapBrand="danger"
                    app:buttonMode="regular"
                    app:showOutline="true"
                    app:roundedCorners="true"
                    />

            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</LinearLayout>
