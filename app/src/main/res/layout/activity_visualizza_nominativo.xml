                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                android:paddingLeft="10dp">

                <TextView
                    android:id="@+id/textView106"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:text="Società:" />

                <TextView
