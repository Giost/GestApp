            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="6dp"
                android:layout_marginTop="40dp"
                android:gravity="center"
                android:orientation="horizontal">

                <com.beardedhen.androidbootstrap.BootstrapButton
                    android:id="@+id/visualizza_nominativo_stampa_button"
                    android:layout_width="70dp"
                    android:layout_height="50dp"
                    android:layout_marginRight="30dp"
                    app:bootstrapBrand="primary"
                    app:bootstrapSize="lg"
                    app:bootstrapText="{fa-print}"
                    app:buttonMode="regular"
                    app:roundedCorners="true"
                    app:showOutline="true" />

                <com.beardedhen.androidbootstrap.BootstrapButton
                    android:id="@+id/visualizza_nominativo_modifica_button"
                    android:layout_width="70dp"
                    android:layout_height="50dp"
                    android:layout_marginRight="30dp"
                    app:bootstrapBrand="warning"
                    app:bootstrapSize="lg"
                    app:bootstrapText="{fa-pencil}"
                    app:buttonMode="regular"
                    app:roundedCorners="true"
                    app:showOutline="true" />

                <com.beardedhen.androidbootstrap.BootstrapButton
                    android:id="@+id/visualizza_nominativo_elimina_button"
                    android:layout_width="70dp"
                    android:layout_height="50dp"
                    app:bootstrapBrand="danger"
                    app:bootstrapSize="lg"
                    app:bootstrapText="{fa-trash}"
                    app:buttonMode="regular"
                    app:roundedCorners="true"
                    app:showOutline="true" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="20dp"
                android:gravity="center"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/visualizza_nominativo_stampa_con_dettagli"
                    android:layout_width="180dp"
                    android:layout_height="45dp"
                    android:layout_below="@+id/main_register_view"
                    android:background="@drawable/petrolio_button_bg"
                    android:text="Stampa con dettagli"
                    android:textColor="@color/petrolio_scuro" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</RelativeLayout>
