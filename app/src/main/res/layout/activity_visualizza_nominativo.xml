                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:orientation="horizontal"
                android:paddingLeft="10dp">

                <Button
                    android:id="@+id/visualizza_nominativo_mostra_dettagli_button"
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="150dp"
                    android:layout_height="35dp"
                    android:background="@drawable/green_background_button"
                    android:text="Mostra dettagli"
                    android:textColor="@color/green_dark"
                    android:textSize="10dp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/visualizza_nominativo_visualizza_dettagli"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/more_detail_background"
                android:orientation="vertical"
                android:visibility="gone">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal"
                    android:paddingLeft="10dp">

                    <TextView
                        android:id="@+id/textView147"
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:text="Luogo di nascita:" />

                    <TextView
                        android:id="@+id/visualizza_nominativo_luogo_nascita"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textColor="@color/asphalt_color" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal"
                    android:paddingLeft="10dp">

                    <TextView
                        android:id="@+id/textView149"
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:text="Data di nascita:" />

                    <TextView
                        android:id="@+id/visualizza_nominativo_data_nascita"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textColor="@color/asphalt_color" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal"
                    android:paddingLeft="10dp">

                    <TextView
                        android:id="@+id/textView151"
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:text="Partita IVA" />

                    <TextView
                        android:id="@+id/visualizza_nominativo_partita_iva"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textColor="@color/asphalt_color" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal"
                    android:paddingLeft="10dp">

                    <TextView
                        android:id="@+id/textView153"
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:text="Codice fiscale:" />

                    <TextView
                        android:id="@+id/visualizza_nominativo_codice_fiscale"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textColor="@color/asphalt_color" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal"
                    android:paddingLeft="10dp">

                    <TextView
                        android:id="@+id/textView155"
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:text="Carta d&apos;identità:" />

                    <TextView
                        android:id="@+id/visualizza_nominativo_carta_identita"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textColor="@color/asphalt_color" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal"
                    android:paddingLeft="10dp">

                    <TextView
                        android:id="@+id/textView157"
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:text="Patente:" />

                    <TextView
                        android:id="@+id/visualizza_nominativo_patente"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textColor="@color/asphalt_color" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal"
                    android:paddingLeft="10dp">

                    <TextView
                        android:id="@+id/textView159"
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:text="Tessera sanitaria:" />

                    <TextView
                        android:id="@+id/visualizza_nominativo_tessera_sanitaria"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textColor="@color/asphalt_color" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal"
                    android:paddingLeft="10dp">

                    <TextView
                        android:id="@+id/textView161"
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:text="Sito web:" />

                    <TextView
                        android:id="@+id/visualizza_nominativo_sito_web"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:autoLink="web"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textColor="@color/asphalt_color" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal"
                    android:paddingLeft="10dp">

                    <TextView
                        android:id="@+id/textView163"
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:text="Nome banca" />

                    <TextView
                        android:id="@+id/visualizza_nominativo_nome_banca"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textColor="@color/asphalt_color" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingLeft="10dp">

                    <TextView
                        android:id="@+id/textView165"
