<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context="com.mcteam.gestapp.Moduli.Commerciale.Offerte.OfferteAdvanceSearch">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin"
            android:background="@color/white"
            android:orientation="vertical"
            android:gravity="center_horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/offerte_ricerca_avanzata_inputs"
                android:orientation="vertical"
                android:layout_marginBottom="10dp">
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName"
                    android:ems="10"
                    android:id="@+id/offerte_ricerca_avanzata_cliente"
                    android:hint="Cliente" />
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:id="@+id/offerte_ricerca_avanzata_codice"
                    android:hint="Codice Commessa" />
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName"
                    android:ems="10"
                    android:id="@+id/offerte_ricerca_avanzata_nome"
                    android:hint="Nome Commessa" />
            </LinearLayout>
            <ImageButton
                android:layout_width="200dp"
                android:layout_height="40dp"
                android:id="@+id/offerte_ricerca_avanzata_cerca_button"
                android:background="@drawable/access_blue"
                android:src="@drawable/ic_search_blue" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:id="@+id/offerte_ricerca_avanzata_status" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/offerte_ricerca_avanzata_recycler"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </LinearLayout>
</RelativeLayout>
